[Unit]
Description=Waitress server for Modulo API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/modulo_api
ExecStart=/opt/modulo_api/venv/bin/waitress-serve \
    --listen=127.0.0.1:8000 config.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
